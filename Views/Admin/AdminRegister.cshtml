@model Claiming_System.Models.AdminRegisterViewModel

@{
    ViewData["Title"] = "Admin Registration";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3>Admin Registration</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="Name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" placeholder="Enter your name" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" placeholder="Enter your email" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="Password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Enter your password" required />
                        </div>

                        <!-- Role Dropdown -->
                        <div class="form-group mb-3">
                            <label for="Role" class="form-label">Role</label>
                            <select asp-for="Role" class="form-control" required>
                                <option value="">Select Role</option>
                                <option value="Programme Coordinator">Programme Coordinator</option>
                                <option value="Academic Manager">Academic Manager</option>
                                <option value="HR">HR</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100" onclick="alert('Form Submitted')">Register</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">
                        Already have an account?
                        <a href="@Url.Action("AdminLogin", "Admin")" class="text-success">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
